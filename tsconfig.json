{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@account-statement/*": [
        "src/modules/account-statement/*"
      ],
      "@pending-payment/*": [
        "src/modules/pending-payment/*"
      ],
      "@customer/*": [
        "src/modules/customer/*"
      ],
      "@history/*": [
        "src/modules/history/*"
      ],
      "@returns/*": [
        "src/modules/returns/*"
      ],
      "@storage/*": [
        "src/modules/storage/*"
      ],
      "@common/*": [
        "src/modules/common/*"
      ],
      "@sales/*": [
        "src/modules/sales/*"
      ],
      "@home/*": [
        "src/modules/home/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}